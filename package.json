{
  "name": "@1500cloud/taitimestamp",
  "version": "0.2.6",
  "description": "A JavaScript/TypeScript library for manipulating TAI timestamps",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "prepublishOnly": "rm -rf dist; npm run-script build",
    "build": "tsc",
    "dev": "concurrently npm:dev:*",
    "dev:jest": "jest --watch",
    "dev:eslint": "esw . --ext .js,.ts -w",
    "test": "concurrently npm:test:*",
    "test:jest": "jest",
    "test:eslint": "eslint . --ext .js,.ts"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/jest": "^24.0.19",
    "@types/node": "^12.11.2",
    "@typescript-eslint/eslint-plugin": "^2.4.0",
    "@typescript-eslint/parser": "^2.4.0",
    "concurrently": "^5.0.0",
    "eslint": "^6.5.1",
    "eslint-config-prettier": "^6.4.0",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-watch": "^6.0.1",
    "jest": "^24.9.0",
    "prettier": "^1.18.2",
    "ts-jest": "^24.1.0",
    "typescript": "^3.6.4"
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/1500cloud/taitimestamp.git"
  },
  "author": "Chris Northwood <chris.northwood@1500cloud.com>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/1500cloud/taitimestamp/issues"
  },
  "homepage": "https://github.com/1500cloud/taitimestamp#readme",
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module"
    },
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "prettier/@typescript-eslint",
      "plugin:prettier/recommended"
    ],
    "rules": {
      "@typescript-eslint/explicit-function-return-type": "off",
      "@typescript-eslint/no-non-null-assertion": "off",
      "@typescript-eslint/ban-ts-ignore": "off"
    },
    "env": {
      "browser": true
    }
  },
  "eslintIgnore": [
    "dist"
  ],
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "testHelpers",
      "dist"
    ]
  },
  "prettier": {
    "trailingComma": "all",
    "printWidth": 100
  }
}
